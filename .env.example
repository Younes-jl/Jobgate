# Configuration Firebase pour JobGate
# Copiez ce fichier en .env et remplissez les valeurs

# Activer le stockage Firebase (true pour Firebase, false pour stockage local)
USE_FIREBASE_STORAGE=false

# Nom du bucket Firebase Storage
FIREBASE_STORAGE_BUCKET=your-firebase-project-id.appspot.com

# Chemin vers le fichier de credentials JSON (optionnel si FIREBASE_CREDENTIALS est défini)
FIREBASE_CREDENTIALS_PATH=./firebase-credentials.json

# Credentials Firebase sous forme de JSON (alternative à FIREBASE_CREDENTIALS_PATH)
# FIREBASE_CREDENTIALS={"type":"service_account","project_id":"your-project-id","private_key_id":"..."}

# Configuration email SendGrid
SENDGRID_API_KEY=your-sendgrid-api-key-here
DEFAULT_FROM_EMAIL=JobGate <noreply@jobgate.com>

# URL du frontend pour les liens dans les emails
FRONTEND_BASE_URL=http://localhost:3000
